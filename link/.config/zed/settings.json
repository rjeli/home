// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
{
  "ui_font_size": 14,

  // "buffer_font_size": null,
  "buffer_font_family": "Menlo",
  "buffer_font_size": 12,
  // "buffer_letter_spacing": -0.02,
  "buffer_line_height": "standard",

  "scroll_sensitivity": 1.1,

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "cursor_blink": false,

  "preferred_line_length": 100,
  "soft_wrap": "editor_width",
  "extend_comment_on_newline": false,

  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "Solarized Dark"
    // "light": "Glazier | Moss Fett",
    // "dark": "Glazier | Moss Fett"
  },
  "experimental.theme_overrides": {
    // fixes no drop shadow for "transparent"
    // "background.appearance": "opaque",

    // "background.appearance": "transparent",
    // "background": "#00000000",

    // "background.appearance": "blurred",
    // "title_bar.background": "#eee8d555",
    // "background": "#fdf6e355",
    // "panel.background": "#00000000",

    "warning": "#b58900"
  },

  "project_panel": {
    "entry_spacing": "standard"
  },
  "outline_panel": {
    "dock": "right"
  },
  "restore_on_startup": "none",

  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "Nix": {
      "language_servers": ["nil", "!nixd"],
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": ["--quiet", "--"]
        }
      }
    },
    "Rust": {
      "language_servers": ["rust-analyzer"],
      "formatter": "language_server"
    },
    "C": {
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "enable_lsp_tasks": true
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },

  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "foo": {
        "name": "foo",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-1-latest"
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
